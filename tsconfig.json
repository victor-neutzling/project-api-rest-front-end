{
    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true,
        "lib": ["ES5","ES6","DOM","DOM.Iterable"],
        "sourceMap": true //enables debug features, do not use in production
    },
    
    "include": ["app/src/**/*"]
  }
  